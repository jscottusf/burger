<div class="container py-3">
    <div class="row">
      <div class="col-lg-6">
        <h1>Burger Menu</h1>
        <img src="/assets/img/burger.png" alt="burger">
        <h2>Create a Burger</h2>
        <div class="input-group mb-3" id="create-burger">
          <input type="text" class="form-control" placeholder="New burger" name="burger" aria-describedby="burger">
          <div class="input-group-append">
            <button class="btn btn-outline-danger" type="button" id="burger">Order Burger</button>
          </div>
        </div>
